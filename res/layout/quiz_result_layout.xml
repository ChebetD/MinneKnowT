			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_margin="10dp"
			android:onClick="saveToDataBase"
	/>
 -->
 
	<!-- button to review the most recent quiz -->
	<Button android:id="@+id/saveQuizResultButton"
			android:text="Review Quiz"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_margin="10dp"
			android:background="@drawable/quiz_question_text_border" 
			android:typeface="serif"
			android:gravity="center"
			android:onClick="showReviewActivity"
	/>
	
</LinearLayout>
