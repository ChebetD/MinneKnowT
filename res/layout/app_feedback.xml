<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingBottom="20dp"
    android:orientation="vertical" >

    <TextView 
        android:id="@+id/feedbackLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you have enjoyed using the app, please carve out couple of minutes to rate the app on Google market. It would be even better if you provide a review for the app!"
	    android:textSize="12sp"
	    android:typeface="sans" 
	    android:padding="10dp"
	    android:textColor="@color/flash_dialog"
	    android:gravity="center"    
        />
    
    <Button
        android:id="@+id/feedbackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedbackLabel"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/border_style"
        android:gravity="center"
        android:text="Review and Rate"
        android:textSize="12sp"
        android:typeface="sans" />
    
    <Button
        android:id="@+id/laterButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/feedbackButton"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/border_style"
        android:gravity="center"
        android:text="Review Later"
        android:textSize="12sp" />
   
    <Button
        android:id="@+id/doNotShowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/laterButton"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/border_style"
        android:gravity="center"
        android:text="Do not show this again!"
        android:textSize="12sp" />
    
</RelativeLayout>