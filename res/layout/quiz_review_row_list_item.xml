<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#d7edf3"
  >

	<ImageView 
		android:id="@+id/reviewActivityListItem_ImageView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:background="#d7edf3"/>
	
    <TextView
    	android:id="@+id/reviewActivityListItemTV1"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textColor="#000000"
    	android:background="#d7edf3"
    	android:padding="10dip"
    	android:textSize="15sp"
    	android:typeface="serif" 
    	android:layout_toRightOf="@id/reviewActivityListItem_ImageView"
    	/>

    <TextView
    	android:id="@+id/reviewActivityListItemTV2"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:textColor="#000000"
	    android:background="#d7edf3"
	    android:padding="10dip"
	    android:textSize="15sp"
	    android:typeface="serif"    	
	    android:layout_below="@id/reviewActivityListItemTV1"
    	>
    </TextView>

</RelativeLayout>
